{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "on"
      }
    }
  },
  "extends": [
    "ultracite/biome/core",
    "ultracite/biome/next",
    "ultracite/biome/react"
  ],
  "files": {
    "ignoreUnknown": true,
    "includes": ["!components/ui", "!supabase/templates"]
  },
  "json": {
    "assist": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "formatter": {
        "enabled": false
      },
      "includes": ["types/supabase.ts"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
