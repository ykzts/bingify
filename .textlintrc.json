{
  "$schema": "https://textlint.github.io/schema/textlintrc.schema.json",
  "rules": {
    "prh": {
      "rulePaths": ["./prh.yml"]
    },
    "terminology": {
      "defaultTerms": true,
      "skip": ["Blockquote"],
      "terms": [
        "Bingify",
        "GitHub",
        "Google",
        "Next.js",
        "Node.js",
        "OAuth",
        "PostgreSQL",
        "React",
        "Supabase",
        "Tailwind CSS",
        "Twitch",
        "YouTube"
      ]
    },
    "no-dead-link": {
      "checkRelative": true,
      "baseURI": null,
      "ignore": [
        "http://localhost*",
        "https://bingify.space*",
        "https://vercel.com/*",
        "https://www.bunka.go.jp/*"
      ],
      "ignoreRedirects": false,
      "retry": 1,
      "userAgent": "textlint-rule-no-dead-link/1.0"
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 150
      },
      "max-comma": {
        "max": 4
      },
      "max-ten": {
        "max": 4
      },
      "max-kanji-continuous-len": {
        "max": 7
      },
      "arabic-kanji-numbers": true,
      "no-mix-dearu-desumasu": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": [],
        "forceAppendPeriod": false
      },
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["か", "に"]
      },
      "ja-no-weak-phrase": false,
      "ja-no-successive-word": false,
      "ja-no-redundant-expression": true,
      "ja-unnatural-alphabet": true
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "never",
        "exceptPunctuation": true
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      },
      "ja-nakaguro-or-halfwidth-space-between-katakana": false,
      "ja-no-space-between-full-width": true,
      "ja-space-after-exclamation": false,
      "ja-space-after-question": false,
      "ja-space-around-link": {
        "before": true,
        "after": true
      }
    },
    "ja-no-weak-phrase": false
  }
}
