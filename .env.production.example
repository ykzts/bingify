# ==========================================
# Bingify - Production Environment Variables
# ==========================================
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to version control

# ==========================================
# Supabase Configuration (Required)
# ==========================================
# Use Supabase Cloud or self-hosted Supabase instance
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==========================================
# Application Settings
# ==========================================
# Production site URL (used for OAuth redirects and email links)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Beta banner display control (set to false for production)
NEXT_PUBLIC_SHOW_BETA_BANNER=false

# ==========================================
# Database Configuration (if using self-hosted PostgreSQL)
# ==========================================
# Note: For Supabase Cloud, these are not needed
POSTGRES_DB=bingify
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ==========================================
# OAuth Provider Credentials
# ==========================================
# Google OAuth
# Register at: https://console.cloud.google.com/
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=

# Twitch OAuth
# Register at: https://dev.twitch.tv/console/apps
SUPABASE_AUTH_EXTERNAL_TWITCH_CLIENT_ID=
SUPABASE_AUTH_EXTERNAL_TWITCH_SECRET=

# ==========================================
# Auth Hook Secrets
# ==========================================
# Generate with: openssl rand -base64 32
# Format: v1,whsec_<generated_value>
SEND_EMAIL_HOOK_SECRETS=

# ==========================================
# SMTP Configuration (for contact forms)
# ==========================================
# SMTP server settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
MAIL_FROM=noreply@your-domain.com

# ==========================================
# Cloudflare Turnstile (Optional - Bot Protection)
# ==========================================
# Get from: https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# ==========================================
# Google Analytics (Optional)
# ==========================================
# GA4 Measurement ID
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ==========================================
# Basic Authentication (Optional)
# ==========================================
# Enable for pre-launch access restriction
ENABLE_BASIC_AUTH=false
BASIC_AUTH_USER=
BASIC_AUTH_PASSWORD=

# ==========================================
# Scheduled Jobs
# ==========================================
# Secret for Vercel Cron authentication
# Generate with: openssl rand -base64 32
CRON_SECRET=
