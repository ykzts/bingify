{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Supabase: Ensure Running",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "pnpm exec supabase status > /dev/null 2>&1 || pnpm exec supabase start"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm build",
      "group": "build",
      "problemMatcher": ["$next-compile"]
    }
  ]
}
